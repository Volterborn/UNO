<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UNO.Application.UNOController">
    <children>
        <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bienvenue dans le jeu UNO !" />
        <Button fx:id="startButton" style="-fx-font-size: 14px; -fx-padding: 10px 20px;" text="Commencer la partie" />
        <ComboBox fx:id="playerCount" prefWidth="200.0" style="-fx-font-size: 14px;" />
        <Button fx:id="confirmButton" style="-fx-font-size: 14px; -fx-padding: 10px 20px;" text="Confirmer" />
    </children>
</VBox>
